<renderpath>
    <rendertarget name="HalfDepth" tag="SSAO" sizedivisor="2 2" format="lineardepth" />
    <rendertarget name="SSAO" tag="SSAO" sizedivisor="2 2" format="r" />
    <rendertarget name="BlurH" tag="SSAO" sizedivisor="1 1" format="r" />
    <rendertarget name="BlurV" tag="SSAO" sizedivisor="1 1" format="r" />

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="SCALE_DEPTH" output="HalfDepth">
        <texture unit="depth" name="depth" />
        <parameter name="Downscale" value="2" />
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="GEN_AO GEN_NRM EXPENSIVE_NRM" output="SSAO">
        <texture unit="0" name="Textures/Random.png" />
        <texture unit="1" name="HalfDepth" />

        <parameter name="Radius" value="150" />
        <parameter name="Scale" value="0.025" />
        <parameter name="Bias" value="0.0" />
        <parameter name="Strength" value="1.0" />

        <parameter name="NoiseScale" value="8 8" />>
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="BLUR" output="BlurH">
        <texture unit="diffuse" name="SSAO" />
        <texture unit="depth" name="depth" />
        <texture unit="1" name="HalfDepth" />

        <parameter name="BlurDir" value="2 2" />
        <parameter name="Sharpness" value="10" />
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="BLUR" output="BlurV">
        <texture unit="diffuse" name="BlurH" />
        <texture unit="depth" name="depth" />
        <texture unit="1" name="HalfDepth" />

        <parameter name="BlurDir" value="-2 2" />
        <parameter name="Sharpness" value="10" />
    </command>    

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="APPLY">
        <texture unit="diffuse" name="viewport" />
        <texture unit="1" name="BlurV" />
    </command>

</renderpath>