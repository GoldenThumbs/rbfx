<renderpath>
    <rendertarget name="Pos" tag="SSAO" sizedivisor="1 1" format="rgba16f" />
    <rendertarget name="SSAO" tag="SSAO" sizedivisor="2 2" format="rg" />
    <rendertarget name="BlurH" tag="SSAO" sizedivisor="2 2" format="rg" />
    <rendertarget name="BlurV" tag="SSAO" sizedivisor="2 2" format="rg" filter="true" />

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="GEN_POS" output="Pos">
        <texture unit="depth" name="depth" />
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="GEN_AO" output="SSAO">
        <texture unit="0" name="Textures/Random.png" />
        <texture unit="1" name="Pos" />

        <parameter name="Radius" value="0.3" />
        <parameter name="Scale" value="0.001" />
        <parameter name="Bias" value="0.0002" />
        <parameter name="Strength" value="1.0" />

        <parameter name="NoiseScale" value="16 16" />
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="BLUR" output="BlurH">
        <texture unit="diffuse" name="SSAO" />

        <parameter name="BlurDir" value="2 0" />
        <parameter name="Sharpness" value="80" />
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="BLUR" output="BlurV">
        <texture unit="diffuse" name="BlurH" />

        <parameter name="BlurDir" value="0 2" />
        <parameter name="Sharpness" value="80" />
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="APPLY" blend="multiply">
        <texture unit="diffuse" name="BlurV" />
    </command>

</renderpath>