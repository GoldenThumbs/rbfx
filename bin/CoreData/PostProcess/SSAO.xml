<renderpath>
    <rendertarget name="pos" sizedivisor="1 1" format="rgba32f" />
    <rendertarget name="ao" sizedivisor="1 1" filter="false" format="rgb" />
    <rendertarget name="blur" sizedivisor="1 1" filter="false" format="rgb" />
    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="GEN_POS" output="pos">
        <texture unit="1" name="depth" />
    </command>
    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="GEN_AO" output="ao">
        <texture unit="0" name="Textures/Random.png" />
        <texture unit="1" name="pos" />

        <parameter name="Radius" value="0.35" />
        <parameter name="Scale" value="1.0" />
        <parameter name="Bias" value="0.15" />
        <parameter name="Strength" value="1.8" />

        <parameter name="NoiseScale" value="4 4" />
    </command>
    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="GEN_BLUR" output="blur">
        <texture unit="1" name="depth" />
        <texture unit="diffuse" name="ao" />
    </command>
    <command type="quad" vs="CopyFramebuffer" ps="CopyFramebuffer" blend="multiply">
        <texture unit="diffuse" name="blur" />
    </command>
</renderpath>