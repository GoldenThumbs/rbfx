<renderpath>
    <rendertarget name="Pos" tag="SSAO" sizedivisor="2 2" format="rgba32f" />
    <rendertarget name="SSAO" tag="SSAO" sizedivisor="2 2" format="rgba" />
    <rendertarget name="BlurH" tag="SSAO" sizedivisor="2 2" format="rgba" />

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="GEN_POS" output="Pos">
        <texture unit="depth" name="depth" />
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="GEN_AO" output="SSAO">
        <texture unit="0" name="Textures/Random.png" />
        <texture unit="1" name="Pos" />

        <parameter name="Radius" value="0.15" />
        <parameter name="Scale" value="0.002" />
        <parameter name="Bias" value="0.0" />
        <parameter name="Strength" value="1.5" />

        <parameter name="NoiseScale" value="16 16" />>
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="BLUR" output="BlurH">
        <texture unit="diffuse" name="SSAO" />

        <parameter name="BlurDir" value="2 0" />
        <parameter name="Sharpness" value="1" />
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="BLUR" output="SSAO">
        <texture unit="diffuse" name="BlurH" />

        <parameter name="BlurDir" value="0 2" />
        <parameter name="Sharpness" value="1" />
    </command>

    <command type="quad" tag="SSAO" vs="SSAO" ps="SSAO" psdefines="APPLY" blend="multiply">
        <texture unit="diffuse" name="SSAO" />
    </command>

</renderpath>